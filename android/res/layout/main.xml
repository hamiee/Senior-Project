<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<com.namniart.MyMapView
		android:id="@+id/mapview"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
	    android:clickable="true"
	    android:apiKey="04n1cey01uPi7XVFRFPzvPqhaFj5Czo0urMnThw"/>
    <RadioGroup
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:padding="10px"
    	android:orientation="horizontal">       
		<RadioButton
			android:id="@+id/mapbutton1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:button="@drawable/button_l"
			android:background="@drawable/button_l"
			android:layout_marginLeft="100px"
			android:layout_marginRight="0px"
			android:layout_weight="1.0"
			android:checked="true"
			android:text="RC"
			android:gravity="center"
			/>
		<RadioButton
			android:id="@+id/mapbutton2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:button="@drawable/button_c"
			android:background="@drawable/button_c"
			android:layout_marginLeft="0px"
			android:layout_marginRight="0px"
			android:layout_weight="1.0"
			android:text="Autonomous"
			android:gravity="center"
			/>
		<RadioButton
			android:id="@+id/mapbutton3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:button="@drawable/button_r"
			android:background="@drawable/button_r"
			android:layout_marginLeft="0px"
			android:layout_marginRight="0px"
			android:layout_weight="1.0"
			android:text="Stop"
			android:gravity="center"
			/>
	</RadioGroup>
</FrameLayout>
