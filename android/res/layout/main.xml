<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.namniart"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<com.namniart.MyMapView
		android:id="@+id/mapview"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
	    android:clickable="true"
	    android:apiKey="0_O45XqEgTRcRhZa1JhiMRk8oOBOeRCcdxXZVyQ"/>
	
	<LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
		android:layout_marginLeft="100dp"
    	>
	    <RadioGroup
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
			android:layout_weight="1.0"
	    	android:padding="10dp"
	    	android:orientation="horizontal">       
			<RadioButton
				android:id="@+id/rcButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:button="@drawable/button_l"
				android:background="@drawable/button_l"
				android:layout_weight="1.0"
				android:checked="true"
				android:text="@string/rc"
				android:gravity="center"
				/>
			<RadioButton
				android:id="@+id/autonomousButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:button="@drawable/button_c"
				android:background="@drawable/button_c"
				android:layout_weight="1.0"
				android:text="@string/autonomous"
				android:gravity="center"
				/>
			<RadioButton
				android:id="@+id/stopButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:button="@drawable/button_r"
				android:background="@drawable/button_r"
				android:layout_weight="1.0"
				android:text="@string/stop"
				android:gravity="center"
				/>
		</RadioGroup>
		
		<CheckBox
			android:id="@+id/recordButton"
			android:checked="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_marginRight="10dp"
			android:button="@drawable/button_record"
			/>
	</LinearLayout>
		
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    android:layout_gravity="bottom|left"
	    >
		<VideoView
			android:id="@+id/videoView"
			android:visibility="invisible"
			android:layout_width="160dp"
			android:layout_height="120dp"
			/>
	
		<com.namniart.DialView
			android:layout_width="120dp"
			android:layout_height="120dp"
		    android:id="@+id/computerBattery"
		    custom:position="bottom_left"
		    custom:direction="ccw"
		    android:layout_gravity="bottom|left"
		    />
	</LinearLayout>
	
	<com.namniart.DialView
		android:layout_width="120dp"
		android:layout_height="120dp"
	    android:id="@+id/motorBattery"
	    custom:position="bottom_right"
	    custom:direction="cw"
	    android:layout_gravity="bottom|right"
	    />
</FrameLayout>
