   <link name="rr_wheel">
      <visual>
         <geometry>
            <cylinder length="0.045" radius="0.055"/>
         </geometry>
         <material name="black"/>
      </visual>
   </link>

   <joint name="rr_wheel_joint" type="fixed">
      <parent link="base_link"/>
      <child link="rr_wheel"/>
      <origin xyz="0 -0.12 0.055" rpy="1.57 0 0"/>
   </joint>
</robot>
